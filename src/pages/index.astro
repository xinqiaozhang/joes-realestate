---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Joe's Real Estate | Mobile Home & Real Estate Investments">
  <!-- Top Bar -->
  <div class="gradient-header py-3 px-6">
    <div class="max-w-6xl mx-auto flex justify-between items-center">
      <div class="flex items-center gap-2 text-white/80 text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span>Joe.x.zhang10@gmail.com</span>
      </div>
      <form class="flex gap-2">
        <input type="email" placeholder="Enter Email for Updates" class="px-4 py-2 rounded text-sm bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:border-white/40 w-48">
        <button type="submit" class="px-4 py-2 bg-white text-primary font-medium text-sm rounded hover:bg-gray-100 transition">
          Subscribe
        </button>
      </form>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-6xl mx-auto px-6 py-4">
      <div class="flex justify-between items-center">
        <a href="#" class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-lg bg-primary flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <div>
            <div class="text-xl font-bold text-primary">Joe's Real Estate</div>
            <div class="text-xs text-gray-500 uppercase tracking-wider">Investment Solutions</div>
          </div>
        </a>
        
        <div class="hidden md:flex items-center space-x-1">
          <a href="#" class="px-4 py-2 text-primary font-medium hover:bg-primary/10 rounded transition">Home</a>
          <a href="#about" class="px-4 py-2 text-gray-600 hover:text-primary hover:bg-primary/10 rounded transition">About</a>
          <a href="#services" class="px-4 py-2 text-gray-600 hover:text-primary hover:bg-primary/10 rounded transition">Services</a>
          <a href="#investments" class="px-4 py-2 text-gray-600 hover:text-primary hover:bg-primary/10 rounded transition">Investments</a>
          <a href="#contact" class="px-4 py-2 text-gray-600 hover:text-primary hover:bg-primary/10 rounded transition">Contact</a>
        </div>

        <a href="#contact" class="btn-primary px-6 py-3 text-white font-medium rounded-lg">
          Get Started
        </a>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="gradient-hero py-24 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <p class="text-gold text-sm font-semibold tracking-widest uppercase mb-4">San Diego Real Estate Investing</p>
          <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight mb-6">
            Smart Investments in<br/>
            <span class="text-gradient">Mobile Homes & Real Estate</span>
          </h1>
          <p class="text-lg text-white/70 mb-8 leading-relaxed">
            We specialize in mobile home investments and strategic real estate acquisitions. 
            Build passive income and achieve financial freedom through proven investment strategies.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#contact" class="btn-primary px-8 py-4 text-white font-semibold rounded-lg text-center">
              Start Investing Today
            </a>
            <a href="#services" class="px-8 py-4 border-2 border-white/30 text-white font-semibold rounded-lg hover:bg-white/10 transition text-center">
              Learn More
            </a>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 card-hover">
            <div class="text-3xl font-bold text-gold mb-2">Mobile</div>
            <div class="text-white/80">Home Investments</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 card-hover">
            <div class="text-3xl font-bold text-gold mb-2">Cash</div>
            <div class="text-white/80">Flow Focused</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 card-hover">
            <div class="text-3xl font-bold text-gold mb-2">San Diego</div>
            <div class="text-white/80">Based Investor</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 card-hover">
            <div class="text-3xl font-bold text-gold mb-2">FIRE</div>
            <div class="text-white/80">Goal Oriented</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 px-6 bg-gray-50">
    <div class="max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 gap-16 items-center">
        <div class="order-2 md:order-1">
          <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900">Joe Zhang</h3>
                <p class="text-primary">Real Estate Investor</p>
              </div>
            </div>
            <blockquote class="text-gray-600 italic border-l-4 border-primary pl-4 mb-4">
              "I believe in building wealth through strategic, cash-flow positive investments. My goal is to help investors achieve financial independence."
            </blockquote>
          </div>
        </div>
        
        <div class="order-1 md:order-2">
          <p class="text-primary text-sm font-semibold tracking-widest uppercase mb-4">About Us</p>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Building Wealth Through Smart Investments</h2>
          <p class="text-gray-600 text-lg leading-relaxed mb-6">
            Joe's Real Estate specializes in mobile home investments and strategic real estate acquisitions in the San Diego area. 
            We focus on cash-flow positive deals that generate consistent passive income.
          </p>
          <p class="text-gray-600 text-lg leading-relaxed mb-8">
            Our mission is to help investors build long-term wealth and achieve financial freedom through data-driven 
            investment strategies and careful market analysis.
          </p>
          <a href="#contact" class="inline-flex items-center text-primary font-semibold hover:underline">
            Learn more about our approach
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 px-6 bg-white">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-primary text-sm font-semibold tracking-widest uppercase mb-4">Our Services</p>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900">What We Offer</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100 card-hover">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Mobile Home Investments</h3>
          <p class="text-gray-600">
            Acquire mobile homes in established parks with strong cash flow potential and lower entry costs than traditional real estate.
          </p>
        </div>
        
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100 card-hover">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Private Lending</h3>
          <p class="text-gray-600">
            Earn attractive returns by becoming a private lender on secured real estate deals. Invest with your IRA or personal funds.
          </p>
        </div>
        
        <div class="bg-gray-50 rounded-2xl p-8 border border-gray-100 card-hover">
          <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-6">
            <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">Investment Consulting</h3>
          <p class="text-gray-600">
            Get personalized guidance on building your real estate portfolio with data-driven analysis and market insights.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Investment Focus Section -->
  <section id="investments" class="py-20 px-6 gradient-hero">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-gold text-sm font-semibold tracking-widest uppercase mb-4">Investment Focus</p>
        <h2 class="text-3xl md:text-4xl font-bold text-white">Why Mobile Homes?</h2>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <h3 class="text-2xl font-bold text-white mb-4">Lower Entry Costs</h3>
